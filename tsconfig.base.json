{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": false,
        "checkJs": false,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmitOnError": true,
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@atlas/shared": ["shared/src/index.ts"],
            "@atlas/shared/*": ["shared/src/*"]
        }
    }
}
