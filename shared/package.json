{
    "name": "@piquet-h/shared",
    "version": "0.2.14",
    "private": false,
    "description": "Shared domain models, persistence helpers, telemetry, and utilities for The Shifting Atlas backend & tooling.",
    "license": "MIT",
    "keywords": [
        "game",
        "cosmosdb",
        "gremlin",
        "telemetry",
        "azure",
        "atlas"
    ],
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./events": {
            "import": "./dist/events/worldEventSchema.js",
            "types": "./dist/events/worldEventSchema.d.ts",
            "require": "./dist/events/worldEventSchema.js",
            "default": "./dist/events/worldEventSchema.js"
        },
        "./auth": {
            "import": "./dist/auth/index.js",
            "types": "./dist/auth/index.d.ts",
            "default": "./dist/auth/index.js"
        },
        "./direction": {
            "import": "./dist/direction/index.js",
            "types": "./dist/direction/index.d.ts",
            "default": "./dist/direction/index.js"
        },
        "./gremlin": {
            "import": "./dist/gremlin/index.js",
            "types": "./dist/gremlin/index.d.ts",
            "default": "./dist/gremlin/index.js"
        },
        "./persistence": {
            "import": "./dist/persistence/index.js",
            "types": "./dist/persistence/index.d.ts",
            "default": "./dist/persistence/index.js"
        },
        "./prompts": {
            "import": "./dist/prompts/index.js",
            "types": "./dist/prompts/index.d.ts",
            "default": "./dist/prompts/index.js"
        },
        "./repos": {
            "import": "./dist/repos/index.js",
            "types": "./dist/repos/index.d.ts",
            "default": "./dist/repos/index.js"
        },
        "./secrets": {
            "import": "./dist/secrets/index.js",
            "types": "./dist/secrets/index.d.ts",
            "default": "./dist/secrets/index.js"
        },
        "./seeding": {
            "import": "./dist/seeding/index.js",
            "types": "./dist/seeding/index.d.ts",
            "default": "./dist/seeding/index.js"
        }
    },
    "browser": {
        "./dist/index.js": "./dist/index.browser.js"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": "20.x",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "clean": "rm -rf dist .cache coverage",
        "generate:barrels": "node scripts/generate-barrels.mjs",
        "prebuild": "npm run generate:barrels",
        "build": "tsc -p tsconfig.json",
        "prewatch": "npm run generate:barrels",
        "watch": "tsc -p tsconfig.json --watch --preserveWatchOutput",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "node --test --import=tsx test/*.test.ts",
        "test:cov": "c8 --reporter=text --reporter=lcov node --test --import=tsx test/*.test.ts || true",
        "smoke:traversal": "node --import=tsx scripts/smoke-traversal.ts",
        "prepublishOnly": "npm run build && npm run test"
    },
    "dependencies": {
        "@azure/identity": "^4.12.0",
        "@azure/keyvault-secrets": "^4.10.0",
        "applicationinsights": "^2.9.5",
        "gremlin": "^3.7.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@types/gremlin": "^3.6.5",
        "@types/node": "^20.14.10",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "eslint": "^9.35.0",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "prettier": "^3.3.3",
        "eslint-plugin-prettier": "^5.2.1",
        "c8": "^10.1.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/piquet-h/the-shifting-atlas.git",
        "directory": "shared"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    }
}
