{
    "name": "@piquet-h/shared",
    "version": "0.3.20",
    "private": false,
    "description": "Shared domain models, persistence helpers, telemetry, and utilities for The Shifting Atlas backend & tooling.",
    "license": "MIT",
    "keywords": [
        "game",
        "cosmosdb",
        "gremlin",
        "telemetry",
        "azure",
        "atlas"
    ],
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./events": {
            "import": "./dist/events/worldEventSchema.js",
            "types": "./dist/events/worldEventSchema.d.ts",
            "require": "./dist/events/worldEventSchema.js",
            "default": "./dist/events/worldEventSchema.js"
        },
        "./auth": {
            "import": "./dist/auth/index.js",
            "types": "./dist/auth/index.d.ts",
            "default": "./dist/auth/index.js"
        },
        "./direction": {
            "import": "./dist/direction/index.js",
            "types": "./dist/direction/index.d.ts",
            "default": "./dist/direction/index.js"
        },
        "./types/playerRepository": {
            "import": "./dist/types/playerRepository.js",
            "types": "./dist/types/playerRepository.d.ts",
            "default": "./dist/types/playerRepository.js"
        }
    },
    "browser": {
        "./dist/index.js": "./dist/index.browser.js"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": "20.x",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "clean": "rm -rf dist .cache coverage",
        "generate:barrels": "node scripts/generate-barrels.mjs",
        "prebuild": "npm run generate:barrels",
        "build": "tsc -p tsconfig.json",
        "prewatch": "npm run generate:barrels",
        "watch": "tsc -p tsconfig.json --watch --preserveWatchOutput",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint": "eslint src test --ext .ts",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
        "test": "node --test --import=tsx test/*.test.ts",
        "test:cov": "c8 --reporter=text --reporter=lcov node --test --import=tsx test/*.test.ts || true",
        "smoke:traversal": "node --import=tsx scripts/smoke-traversal.ts",
        "prepublishOnly": "npm run build && npm run test"
    },
    "dependencies": {
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/node": "^20.19.23",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "c8": "^10.1.2",
        "eslint": "^9.35.0",
        "eslint-plugin-prettier": "^5.2.1",
        "prettier": "^3.3.3",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/piquet-h/the-shifting-atlas.git",
        "directory": "shared"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    }
}
