{
    "name": "@piquet-h/shared",
    "version": "0.2.0",
    "private": false,
    "description": "Shared domain models, persistence helpers, telemetry, and utilities for The Shifting Atlas backend & tooling.",
    "license": "MIT",
    "keywords": [
        "game",
        "cosmosdb",
        "gremlin",
        "telemetry",
        "azure",
        "atlas"
    ],
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./events": {
            "import": "./dist/events/worldEventSchema.js",
            "types": "./dist/events/worldEventSchema.d.ts",
            "require": "./dist/events/worldEventSchema.js"
        }
    },
    "browser": {
        "./dist/index.js": "./dist/index.browser.js"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": "20.x",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "clean": "node ../scripts/clean.mjs --here",
        "build": "tsc -p tsconfig.json",
        "watch": "tsc -p tsconfig.json --watch --preserveWatchOutput",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "node --test --import=tsx test/*.test.ts",
        "prepublishOnly": "npm run build && npm run test"
    },
    "dependencies": {
        "@azure/identity": "^4.12.0",
        "@azure/keyvault-secrets": "^4.10.0",
        "applicationinsights": "^2.9.5",
        "gremlin": "^3.7.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@types/gremlin": "^3.6.5",
        "@types/node": "^20.14.10",
        "typescript": "^5.9.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/piquet-h/the-shifting-atlas.git",
        "directory": "shared"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    }
}
