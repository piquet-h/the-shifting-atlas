{
    "name": "the-shifting-atlas-root",
    "private": true,
    "type": "module",
    "packageManager": "npm@10.9.0",
    "engines": {
        "node": "20.x",
        "npm": ">=10.0.0"
    },
    "workspaces": [
        "shared",
        "frontend",
        "frontend/api",
        "backend"
    ],
    "scripts": {
        "dev": "npm run dev -w frontend",
        "swa:dev": "npm run build -w shared && swa start dev",
        "swa:build": "swa build dev",
        "swa:deploy": "swa deploy dev",
        "validate:seed": "tsx shared/scripts/validateDirections.ts",
        "build": "tsc -b tsconfig.refs.json && npm run sync:static -w frontend/api && npm run build -w frontend",
        "build:fast": "tsc -b tsconfig.refs.json",
        "seed:world": "npm run build:fast && node scripts/seed-world.mjs",
        "verify:deployable": "node scripts/verify-deployable.mjs",
        "verify:graph": "tsc -b --dry tsconfig.refs.json",
        "typecheck": "tsc -b tsconfig.refs.json",
        "typecheck:noEmit": "echo 'Direct --noEmit with project references is unsupported; running full build instead' && tsc -b tsconfig.refs.json",
        "clean": "tsc -b --clean tsconfig.refs.json || true && node scripts/clean.mjs --all",
        "pretest": "npm run build",
        "test": "npm --workspaces --if-present run test",
        "coverage": "c8 --reporter=text --reporter=lcov npm run test",
        "a11y": "npm run a11y -w frontend",
        "prelint": "node -e \"['@typescript-eslint/eslint-plugin','@typescript-eslint/parser'].forEach(m=>{try{require.resolve(m);console.log('found',m)}catch(e){console.error('MISSING',m);process.exitCode=1}})\"",
        "lint": "npm run prelint && eslint 'shared/src' 'backend/src' 'frontend/src' 'frontend/api/src' --ext .ts,.tsx",
        "lint:fix": "npm run lint -- --fix",
        "lint:changed": "git diff --name-only --diff-filter=ACMRT origin/main...HEAD | grep -E '\\.(ts|tsx)$' | xargs -r eslint",
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "analyze:di": "node scripts/di-suitability.mjs",
        "sync:impl-order:validate": "node scripts/sync-implementation-order.mjs validate",
        "sync:impl-order:apply": "node scripts/sync-implementation-order.mjs apply",
        "sync:impl-order:resequence": "node scripts/sync-implementation-order.mjs resequence",
        "sync:impl-order:next": "node scripts/sync-implementation-order.mjs next",
        "sync:labels": "node scripts/sync-labels.mjs",
        "update:issue-status": "node scripts/update-issue-status.mjs",
        "test:issue-status": "node scripts/test-update-issue-status.mjs",
        "schedule:roadmap": "node scripts/schedule-roadmap.mjs",
        "assign:impl-order": "node scripts/assign-impl-order.mjs",
        "check:ordering-integrity": "node scripts/check-ordering-integrity.mjs",
        "detect:ordering-overrides": "node scripts/detect-ordering-overrides.mjs",
        "metrics:weekly": "node scripts/weekly-ordering-metrics.mjs",
        "test:ordering": "node scripts/test-ordering-telemetry.mjs",
        "test:ordering-hardening": "node scripts/test-ordering-hardening.mjs",
        "test:idempotent-comments": "node scripts/test-idempotent-comments.mjs",
        "validate:telemetry-separation": "node scripts/validate-telemetry-separation.mjs",
        "validate:artifact-schema": "node scripts/validate-artifact-schema.mjs",
        "scan:graph-consistency": "node scripts/scan-graph-consistency.mjs"
    },
    "devDependencies": {
        "@azure/static-web-apps-cli": "^2.0.6",
        "@types/node": "^24.4.0",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "c8": "^10.1.2",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "prettier": "^3.3.3",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    }
}
