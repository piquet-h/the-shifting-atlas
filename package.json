{
    "name": "the-shifting-atlas-root",
    "private": true,
    "workspaces": [
        "frontend",
        "frontend/api",
        "backend"
    ],
    "scripts": {
        "install:all": "npm install --workspaces",
        "dev": "npm run dev --prefix frontend",
        "swa": "bash ./scripts/swa-auth.sh",
        "swa:start": "bash ./scripts/swa-auth.sh",
        "swa:start:verbose": "SWA_VERBOSE=1 bash ./scripts/swa-auth.sh",
        "swa:build": "swa build dev",
        "swa:deploy": "swa deploy dev",
        "build": "npm run build -w frontend && npm run build -w frontend/api && npm run build -w backend",
        "typecheck": "npm run typecheck -w frontend && npm run typecheck -w frontend/api --if-present && npm run typecheck -w backend --if-present",
        "a11y": "npm run a11y -w frontend",
        "lint": "eslint 'backend/src' 'frontend/src' 'frontend/api/src' --ext .ts,.tsx",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier . --write",
        "format:check": "prettier . --check"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.43.0",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "prettier": "^3.3.3"
    }
}
