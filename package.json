{
  "name": "the-shifting-atlas-root",
  "private": true,
  "workspaces": [
    "frontend",
    "frontend/api",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "dev": "npm run dev --prefix frontend",
    "swa": "swa start dev",
    "swa:start": "swa start dev",
    "swa:start:verbose": "swa start dev --verbose",
    "swa:build": "swa build dev",
    "swa:deploy": "swa deploy dev",
    "build": "npm run build -w frontend && npm run build -w frontend/api && npm run build -w backend",
    "typecheck": "npm run typecheck -w frontend && npm run build -w frontend/api --if-present && npm run build -w backend --if-present"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0"
  }
}
