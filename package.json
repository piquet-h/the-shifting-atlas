{
    "name": "the-shifting-atlas-root",
    "private": true,
    "packageManager": "npm@10.9.0",
    "engines": {
        "node": "20.x",
        "npm": ">=10.0.0"
    },
    "workspaces": [
        "shared",
        "frontend",
        "frontend/api",
        "backend"
    ],
    "scripts": {
        "install:all": "npm install --workspaces",
        "dev": "npm run dev --prefix frontend",
        "swa": "npm run build -w shared && swa start dev",
        "swa:build": "swa build dev",
        "swa:deploy": "swa deploy dev",
        "build": "npm -w shared -w frontend -w frontend/api -w backend run build",
        "typecheck": "npm -w shared -w frontend -w frontend/api -w backend run typecheck --if-present",
        "a11y": "npm run a11y -w frontend",
        "lint": "eslint 'backend/src' 'frontend/src' 'frontend/api/src' --ext .ts,.tsx",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier . --write",
        "format:check": "prettier . --check"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.43.0",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "prettier": "^3.3.3"
    }
}
