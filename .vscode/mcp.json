{
    "inputs": [
        {
            "type": "promptString",
            "id": "atlas-mcp-bearer-token",
            "description": "Azure AD Bearer Token for Atlas MCP (obtain via: az account get-access-token --scope api://fecae6e9-696f-46e4-b1c8-5b471b499a24/shifting-atlas-api/.default)",
            "password": true
        }
    ],
    "servers": {
        "github-remote-mcp-server": {
            "url": "https://api.githubcopilot.com/mcp/",
            "type": "http"
        },
        "live-the-shifting-atlas": {
            "type": "http",
            "url": "https://func-atlas.azurewebsites.net/runtime/webhooks/mcp",
            "headers": {
                "Authorization": "Bearer ${input:atlas-mcp-bearer-token}"
            }
        },
        "playwright": {
            "command": "npx",
            "args": ["@playwright/mcp@latest"],
            "type": "stdio"
        },
        "tailwindcss-mcp-server": {
            "command": "npx",
            "args": ["tailwindcss-mcp-server@latest"],
            "type": "stdio"
        }
    }
}
