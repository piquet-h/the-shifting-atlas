{
    "inputs": [
        {
            "type": "promptString",
            "id": "atlas-mcp-system-key",
            "description": "Azure Functions MCP Extension System Key (mcp_extension). Obtain via: az functionapp keys list --resource-group rg-atlas-game --name func-atlas --query systemKeys.mcp_extension -o tsv",
            "password": true
        }
    ],
    "servers": {
        "github-remote-mcp-server": {
            "url": "https://api.githubcopilot.com/mcp/",
            "type": "http"
        },
        "live-the-shifting-atlas": {
            "type": "http",
            "url": "https://func-atlas.azurewebsites.net/runtime/webhooks/mcp"
        },
        "playwright": {
            "command": "npx",
            "args": ["@playwright/mcp@latest"],
            "type": "stdio"
        },
        "tailwindcss-mcp-server": {
            "command": "npx",
            "args": ["tailwindcss-mcp-server@latest"],
            "type": "stdio"
        }
    }
}
