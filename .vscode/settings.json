{
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/node_modules": true
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": "always"
    },
    "tailwindCSS.includeLanguages": {
        "javascript": "javascript",
        "html": "html",
        "javascriptreact": "javascript"
    }
}