{
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/node_modules": true
    },
    "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.fixAll.eslint": "always",
        "source.organizeImports": "always"
    },
    "tailwindCSS.includeLanguages": {
        "javascript": "javascript",
        "html": "html",
        "javascriptreact": "javascript"
    },
    "azureFunctions.deploySubpath": "backend",
    "azureFunctions.postDeployTask": "npm install (functions)",
    "azureFunctions.projectLanguage": "TypeScript",
    "azureFunctions.projectRuntime": "~4",
    "debug.internalConsoleOptions": "neverOpen",
    "azureFunctions.projectLanguageModel": 4,
    "azureFunctions.preDeployTask": "npm prune (functions)",
    "azurite.location": "/Volumes/External/azurite_db",
    "problems.autoReveal": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.requireConfig": true,
    "prettier.configPath": "./.prettierrc",
    "tailwindCSS.emmetCompletions": true,
    "editor.quickSuggestions": { "strings": true },
    "css.validate": false,
    "scss.validate": false,
    "less.validate": false,
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.alternateGptPrompt.enabled": true,
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "github.copilot.chat.languageContext.fix.typescript.enabled": true,
    "github.copilot.chat.languageContext.inline.typescript.enabled": true,
    "github.copilot.chat.languageContext.typescript.enabled": true,
    "github.copilot.chat.notebook.enhancedNextEditSuggestions.enabled": false,
    "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [],
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            // Workspace-scoped path to commit message guidance so AI suggestions use the repo's conventions.
            // Referenced from user-level setting previously; moved here for portability.
            "file": ".github/copilot-commit-message-instructions.md"
        }
    ],
    // Per-language Copilot & editor tuning: see .github/copilot-language-style.md for rationale.
    "[javascript]": {
        "github.copilot.inlineSuggest.enable": true,
        "editor.suggest.preview": true
    },
    "[javascriptreact]": {
        "github.copilot.inlineSuggest.enable": true
    },
    "[typescript]": {
        "github.copilot.inlineSuggest.enable": true,
        "editor.inlayHints.enabled": "on" // keep rich hints for TS
    },
    "[typescriptreact]": {
        "github.copilot.inlineSuggest.enable": true
    },
    "[markdown]": {
        "github.copilot.inlineSuggest.enable": false,
        "editor.wordWrap": "on"
    },
    "[json]": {
        "github.copilot.inlineSuggest.enable": true
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "github.copilot.inlineSuggest.enable": true
    },
    "[shellscript]": {
        "github.copilot.inlineSuggest.enable": true
    },
    // Explicitly enable Copilot for requested languages (jsx, js, tsx, ts, md, json, yml, mjs, mts, sh)
    // Language IDs used by VS Code:
    //  - javascript (.js, .mjs)
    //  - javascriptreact (.jsx)
    //  - typescript (.ts, .mts)
    //  - typescriptreact (.tsx)
    //  - markdown (.md)
    //  - json (.json)
    //  - yaml (.yml / .yaml)
    //  - shellscript (.sh)
    "github.copilot.enable": {
        "markdown": true,
        "javascript": true,
        "javascriptreact": true,
        "typescript": true,
        "typescriptreact": true,
        "json": true,
        "yaml": true,
        "shellscript": true
    },
    "github.copilot.chat.reviewSelection.instructions": [],
    "[bicep]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-bicep"
    },
    "chat.agent.maxRequests": 500,
    "chat.useNestedAgentsMdFiles": true,
    "github.copilot.chat.summarizeAgentConversationHistory.enabled": false
}
