{
    "name": "the-shifting-atlas-backend",
    "version": "0.1.0",
    "private": true,
    "main": "dist/functions/*.js",
    "scripts": {
        "clean": "rm -rf dist .cache coverage",
        "build": "tsc",
        "watch": "tsc --watch --preserveWatchOutput",
        "typecheck": "tsc --noEmit",
        "lint": "eslint --ext .ts,.tsx src",
        "test": "node --test --import=tsx test/*.test.ts",
        "test:cov": "c8 --reporter=text --reporter=lcov node --test --import=tsx test/*.test.ts || true",
        "predev": "npm run build",
        "dev": "concurrently -k -n tsc,host -c yellow,blue \"npm:watch\" \"func start\"",
        "start": "npm run build && func start"
    },
    "engines": {
        "node": "20.x",
        "npm": ">=10.0.0"
    },
    "dependencies": {
        "@azure/cosmos": "^4.3.0",
        "@azure/functions": "^4.8.0",
        "@azure/identity": "^4.13.0",
        "@azure/keyvault-secrets": "^4.10.0",
        "@piquet-h/shared": "^0.3.10",
        "applicationinsights": "^2.9.5",
        "ci": "^2.3.0",
        "gremlin": "^3.7.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@types/gremlin": "^3.6.5",
        "@types/node": "^24.4.0",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "c8": "^10.1.2",
        "concurrently": "^9.2.1",
        "eslint": "^9.35.0",
        "eslint-plugin-prettier": "^5.2.1",
        "prettier": "^3.3.3",
        "tsx": "^4.19.1",
        "typescript": "^5.9.2"
    }
}
