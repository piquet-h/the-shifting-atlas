{
    "version": "2.0",
    "extensionBundle": {
        "id": "Microsoft.Azure.Functions.ExtensionBundle",
        "version": "[4.*, 5.0.0)"
    },
    "extensions": {
        "serviceBus": {
            "messageHandlerOptions": {
                "autoComplete": true
            }
        },
        "mcp": {
            "enabled": true,
            "instructions": "Resolves combat, movement, and other game mechanics for The Shifting Atlas. It processes requests from the game clients and updates the game state accordingly.",
            "serverName": "mcp-the-shifting-atlas",
            "serverVersion": "0.0.1",
            "encryptClientState": false,
            "messageOptions": {
                "useAbsoluteUriForEndpoint": false
            },
            "system": {
                "webhookAuthorizationLevel": "Anonymous"
            }
        }
    },
    "logging": {
        "console": {
            "isEnabled": true,
            "disableColors": false
        },
        "applicationInsights": {
            "samplingSettings": {
                "isEnabled": false
            }
        },
        "logLevel": {
            "default": "Information",
            "Azure": "Warning",
            "Azure.Storage": "Warning",
            "Azure.Storage.Queues": "Warning",
            "Azure.Storage.Blobs": "Warning",
            "Azure.Core": "Warning",
            "Microsoft.Azure.WebJobs": "Warning"
        }
    }
}