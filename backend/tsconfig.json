{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "composite": true,
        // Cache TypeScript incremental build info
        "tsBuildInfoFile": "./.cache/tsbuildinfo"
    },
    "references": [{ "path": "../shared" }],
    "include": ["src", "../shared/src"],
    "exclude": ["node_modules", "dist"]
}
