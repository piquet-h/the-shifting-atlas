{
    "name": "the-shifting-atlas-frontend",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "clean": "rm -rf dist .cache coverage",
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "swa": "npx swa start --config ../swa-cli.config.json",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src test --ext .ts,.tsx",
        "format": "prettier --write \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\"",
        "a11y:serve": "vite --port 5173",
        "a11y:scan": "node ./scripts/run-axe.mjs",
        "a11y": "start-server-and-test a11y:serve http-get://localhost:5173 a11y:scan",
        "test": "vitest run",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed"
    },
    "engines": {
        "node": "22.x",
        "npm": ">=10.0.0"
    },
    "dependencies": {
        "@microsoft/applicationinsights-web": "^3.2.1",
        "@piquet-h/shared": "^0.3.96",
        "@tanstack/react-query": "^5.90.11",
        "@tanstack/react-query-devtools": "^5.91.1",
        "isomorphic-dompurify": "^2.33.0",
        "marked": "^17.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.14.0"
    },
    "devDependencies": {
        "@axe-core/cli": "^4.9.0",
        "@playwright/test": "^1.57.0",
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/dompurify": "^3.0.5",
        "@types/node": "^22.0.0",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "@vitejs/plugin-react": "^5.1.1",
        "autoprefixer": "^10.4.0",
        "eslint": "^9.35.0",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "happy-dom": "^20.0.11",
        "jsdom": "^25.0.1",
        "msw": "^2.12.4",
        "postcss": "^8.4.0",
        "prettier": "^3.3.3",
        "start-server-and-test": "^2.0.8",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.9.2",
        "vite": "^7.1.11",
        "vite-plugin-svgr": "^4.5.0",
        "vitest": "^4.0.9"
    }
}
