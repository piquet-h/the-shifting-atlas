{
    "name": "the-shifting-atlas-website-api",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "clean": "node ../../scripts/clean.mjs --here",
        "build": "npm run clean && (cd ../.. && tsc -b --force tsconfig.refs.json)",
        "watch": "tsc -b --watch --preserveWatchOutput",
        "typecheck": "tsc --noEmit -p tsconfig.json",
        "test": "node --test --import=tsx test/*.test.ts",
        "dev": "npm run clean && tsc -b --watch --preserveWatchOutput & func start",
        "start": "npm run build && func start",
        "a11y": "echo 'No UI surface for API workspace; skipping a11y scan.'"
    },
    "engines": {
        "node": "20.x",
        "npm": ">=10.0.0"
    },
    "dependencies": {
        "@azure/functions": "^4.8.0",
        "@atlas/shared": "file:../../shared"
    }
}
