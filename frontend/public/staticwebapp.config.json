{
    "platform": {
        "apiRuntime": "node:20"
    },
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/api/*"
        ]
    },
    "routes": [
        {
            "route": "/api/ping",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/api/health",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/api/player",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/api/location",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/api/location/*",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/api/player/*/move",
            "allowedRoles": [
                "anonymous",
                "authenticated"
            ]
        },
        {
            "route": "/api/*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/player/*",
            "allowedRoles": [
                "authenticated"
            ]
        }
    ],
    "auth": {
        "identityProviders": {
            "customOpenIdConnectProviders": {
                "msa": {
                    "registration": {
                        "clientIdSettingName": "AAD_CLIENT_ID",
                        "clientCredential": {
                            "clientSecretSettingName": "AAD_CLIENT_SECRET"
                        },
                        "openIdConnectConfiguration": {
                            "wellKnownOpenIdConfiguration": "https://theshiftingatlasdev.ciamlogin.com/theshiftingatlasdev.onmicrosoft.com/v2.0/.well-known/openid-configuration?p=signupsignin"
                        }
                    },
                    "login": {
                        "nameClaimType": "name",
                        "scopes": [
                            "openid",
                            "profile",
                            "email"
                        ]
                    }
                }
            }
        }
    }
}